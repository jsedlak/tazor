@inject IThemeManager Theme
<div class=@Theme.Current.Content.Spinner.Wrapper>    
    @if(Icon != null)
    {
        <div class=@Theme.Current.Content.Spinner.SpinnerIcon>@Icon</div>
    }
    else 
    {
        <div class=@Theme.Current.Content.Spinner.SpinnerDiv
             role="status">
        </div>
    }
    @if(!string.IsNullOrWhiteSpace(Text)) 
    {
        <span class=@Theme.Current.Content.Spinner.Text>@Text</span>
    }
</div>

@code {
    [Parameter]
    public string? Text { get; set; } = null;

    [Parameter]
    public MarkupString? Icon { get; set; } = null;
}
