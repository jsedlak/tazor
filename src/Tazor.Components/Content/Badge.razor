@inject IThemeManager Theme
<div class=@($"{Theme.Current.Content.BadgeGlobal} {GetCssClass()}")>
    @ChildContent
</div>
@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public BadgeType Type { get; set; }

    [Parameter]
    public string CustomClass { get; set; } = "";

    private string GetCssClass()
    {
        switch(Type)
        {
            case BadgeType.Success:
                return Theme.Current.Content.BadgeSuccess;
            case BadgeType.Info:
                return Theme.Current.Content.BadgeInfo;
            case BadgeType.Warning:
                return Theme.Current.Content.BadgeWarning;
            case BadgeType.Error:
                return Theme.Current.Content.BadgeError;
            case BadgeType.Custom:
                return CustomClass;
            default:
                return Theme.Current.Content.BadgeGlobal;
        }
    }
}
